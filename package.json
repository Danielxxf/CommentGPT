{
  "name": "commentgpt",
  "displayName": "CommentGPT",
  "description": "这是一个基于 ChatGPT 可为多种语言代码添加注释的 VSCode 插件",
  "publisher": "Danielxxf",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "enabledApiProposals": ["contribEditorContentMenu"],
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "commentgpt.generateComment",
          "group": "group_1"
        }
      ]
    },
    "commands": [
      {
        "command": "commentgpt.generateComment",
        "title": "生成注释（选中段落）"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "axios-proxy-fix": "^0.16.3",
    "openai": "^3.3.0"
  }
}
